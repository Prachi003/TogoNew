<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_85sdp"
    android:layout_margin=".88dp"
    android:layout_height="@dimen/_85sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >


    <android.support.v7.widget.CardView
        android:id="@+id/cardPost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_5sdp"

        android:layout_marginBottom="@dimen/_1sdp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardMaxElevation="@dimen/_3sdp"
        app:cardPreventCornerOverlap="true"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_splash_screen"
                android:scaleType="fitXY"

                android:visibility="gone" />

            <ImageView
                android:id="@+id/place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/opacity"
                android:scaleType="fitXY"

                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="50dp"
                android:visibility="gone"
                android:id="@+id/rlText"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/cornertext"

                android:layout_height="20dp">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/_100"
                    android:layout_marginLeft="@dimen/_3sdp"

                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:visibility="gone" />


            </RelativeLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgAdd"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_song" />

                <TextView
                    android:id="@+id/txtAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/add_items"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="@color/new_gray_color"
                    android:textSize="12sp" />

            </LinearLayout>





        </RelativeLayout>


    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_20sdp"
        android:id="@+id/card"
        android:visibility="gone"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_3sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/cancel" />


    </android.support.v7.widget.CardView>



</RelativeLayout>