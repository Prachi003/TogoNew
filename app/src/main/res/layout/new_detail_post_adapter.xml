<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin=".55dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:layout_width="@dimen/_130sdp"
        android:orientation="vertical"
        android:id="@+id/llCard"
        android:layout_height="@dimen/_120sdp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardMaxElevation="@dimen/_3sdp"
            app:cardPreventCornerOverlap="true"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">





                <ImageView
                    android:id="@+id/itemImageN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_splash_screen"
                    android:scaleType="fitXY"

                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/placeHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/opacity"
                    android:scaleType="fitXY"

                    android:visibility="visible" />



                <TextView
                    android:id="@+id/tvPriceText"
                    android:layout_width="66dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/cornertext"

                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:text="@string/_100"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtAddN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/add_items"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp" />

                </LinearLayout>





            </RelativeLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:fontFamily="@font/montserrat_regular"
        android:layout_below="@+id/llCard"
        android:textColor="@color/colorBtn"
        android:textSize="14sp"
        android:inputType="textCapSentences"

        android:visibility="gone"
        android:id="@+id/txtStatus"
        android:text="Pending"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_height="wrap_content" />








</RelativeLayout>