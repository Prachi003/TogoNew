<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/mainLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/iv_back_press"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/ic_new_blue_back_ico"
            android:padding="@dimen/_8sdp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Bank Account"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/mdtp_white"
            android:fontFamily="@font/montserrat_regular"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/ly_main_add_bank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_45sdp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">



                <EditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"

                    android:id="@+id/edtFirstNamenew"
                    android:hint="Account Holder first name"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColorHint="@color/darker_gray"
                    android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_marginTop="@dimen/_7sdp"
                android:inputType="text"
                android:id="@+id/edtLastName"
                android:textColor="@color/colorBlack"

                android:hint="Account Holder Last Name"
                android:fontFamily="@font/montserrat_regular"
                android:textColorHint="@color/darker_gray"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_marginTop="@dimen/_7sdp"
                android:inputType="numberPassword"
                android:textColor="@color/colorBlack"


                android:id="@+id/edtAccontnumber"
                android:hint="Account number"
                android:fontFamily="@font/montserrat_regular"
                android:textColorHint="@color/darker_gray"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>



            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_marginTop="@dimen/_7sdp"
                android:inputType="numberPassword"
                android:id="@+id/edtConfirm"
                android:textColor="@color/colorBlack"

                android:hint="Confirm Account number"
                android:fontFamily="@font/montserrat_regular"
                android:textColorHint="@color/darker_gray"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_marginTop="@dimen/_7sdp"
                android:inputType="numberPassword"
                android:textColor="@color/colorBlack"

                android:id="@+id/edtRouting"

                android:hint="Routing number"
                android:fontFamily="@font/montserrat_regular"
                android:textColorHint="@color/darker_gray"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>


            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:textColor="@color/colorBlack"

                android:layout_marginTop="@dimen/_7sdp"
                android:inputType="numberPassword"
                android:id="@+id/edtConfirmRouting"
                android:hint="Confirm Routing number"
                android:fontFamily="@font/montserrat_regular"
                android:textColorHint="@color/darker_gray"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_marginTop="@dimen/_7sdp"
                android:inputType="number"
                android:id="@+id/edtPostCode"
                android:hint="Post Code"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/montserrat_regular"
                android:textColorHint="@color/darker_gray"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>


            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_marginTop="@dimen/_7sdp"
                android:inputType="number"
                android:id="@+id/edtssnNo"
                android:hint="SSN Number"
                android:fontFamily="@font/montserrat_regular"
                android:textColorHint="@color/darker_gray"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Date of birth"
                android:textSize="16sp"
                android:id="@+id/tvDob"
                android:textColor="@color/darker_gray"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:inputType="number"
                    android:id="@+id/txtDate"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"

                    android:layout_gravity="center"
                    android:hint="DD/MM/YY"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColorHint="@color/darker_gray"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/colorBlack"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_down_arrow"
                    android:layout_gravity="center"


                    android:layout_height="@dimen/_10sdp" />

            </RelativeLayout>






            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/darker_gray"
                android:layout_height="@dimen/_1sdp"/>



            <RelativeLayout
                android:id="@+id/rl_add_card_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_30sdp"
                android:background="@drawable/new_continue_btn_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Add Account"
                    android:id="@+id/txtButtonAdd"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textNormalSize" />

                <RelativeLayout
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/new_bg_white_circle">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/new_back_ico" />
                </RelativeLayout>
            </RelativeLayout>



        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/AlertDialog.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
