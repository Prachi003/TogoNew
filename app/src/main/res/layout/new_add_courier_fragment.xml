<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/title_header"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/add_courier_item"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textMediamSize" />




    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_5sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="@string/delivery_title"
                android:textSize="15sp"
                android:id="@+id/txtTitlenew"
                android:fontFamily="@font/rubik_regular"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="13sp"
                android:layout_below="@+id/txtTitlenew"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/enter_orders"
                android:id="@+id/et_title"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                tools:ignore="UnusedAttribute"
                android:inputType="text" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5sp"
                android:id="@+id/view"
                android:layout_below="@+id/et_title"
                android:background="@color/colorDivider"
                android:layout_height="1dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/new_gray_color"
                android:layout_below="@+id/view"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/total_delivery_price"

                android:textSize="12sp"
                android:id="@+id/txtPrice"
                android:fontFamily="@font/rubik_regular"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />


            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:visibility="gone"
                android:textSize="12sp"
                android:layout_below="@+id/txtPrice"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/enter_total_price"
                android:id="@+id/et_priceItem"
                android:textColor="@color/colorBlack"

                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                tools:ignore="SmallSp,UnusedAttribute"
                android:inputType="text" />


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5sp"
                android:id="@+id/viewPrice"
                android:visibility="gone"
                android:layout_below="@+id/et_priceItem"
                android:background="@color/darker_gray"
                android:layout_height="1dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="@string/delivery_items"
                android:textSize="15sp"

                android:id="@+id/txtDeliveryItem"
                android:layout_below="@+id/viewPrice"
                android:layout_marginTop="@dimen/_15sdp"

                android:fontFamily="@font/rubik_regular"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerPost"
                android:layout_above="@+id/llButton"
                android:layout_below="@+id/txtDeliveryItem"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:id="@+id/llButton"
                android:layout_alignParentBottom="true"

                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/add_courier_item_btn_new"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:clickable="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:background="@drawable/new_continue_btn_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:text="Create Post"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/new_bg_white_circle"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/new_back_ico" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:id="@+id/textDelivery"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Click create post when youâ€™re done adding deliveries"
                    android:layout_below="@+id/add_courier_item_btn"
                    android:layout_height="wrap_content" />

            </LinearLayout>












        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>